# Function To Change Dollar Values Into K
def Convert_Dollar_Into_Vales(Values):
    if Values >= 1_000_000:
        return f"{Values / 1_000_000:.2f}M"
    elif Values >= 1_000:
        return f'{Values / 1_000:.2f}k'
    else:
        return str(Values)


